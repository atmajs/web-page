
.-overlay {
	.close x-signal='click: close';
	
	.-overlay-content;
	
	:animation #show {
		@model > 'display | > block'
		@next  > 'transform | translateY(-100%) > translateY(0%) | ease-in 150ms'
	}
	:animation #hide {
		
		@model > 'opacity | 1 > 0 | ease-in 150ms'
		@next  {
			'display | > none'
			'opacity | > 1 | 0ms'
		}
	}
}
